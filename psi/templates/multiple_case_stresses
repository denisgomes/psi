{% block body %}
{%- for i, point in enumerate(loadcases[0].points) -%}

{%- set HOOP = 0 -%}
{%- set AXIAL = 0 -%}
{%- set TORSION = 0 -%}
{%- set PRESSURE = 0 -%}
{%- set BENDING = 0 -%}
{%- set CODE = 0 -%}
{%- set ALLOW = 0 -%}
{%- set SIFi = 0 -%}
{%- set SIFo = 0 -%}
{%- set RATIO = 0 -%}

{%- for loadcase in loadcases -%}

{%- set results = loadcase.stresses.results[i] -%}
{%- set hoop = results[0] -%}
{%- set axial = results[1] -%}
{%- set torsion = results[2] -%}
{%- set pressure = results[3] -%}
{%- set bending = results[4] -%}
{%- set code = results[5] -%}
{%- set allow = results[8] -%}
{%- set sifi = results[6] -%}
{%- set sifo = results[7] -%}
{%- set ratio = results[9] -%}

{%- if abs(hoop) > abs(HOOP) -%}
    {%- set HOOP = hoop -%}
{% endif -%}
{%- if abs(axial) > abs(AXIAL) -%}
    {%- set AXIAL = axial -%}
{% endif -%}
{%- if abs(torsion) > abs(TORSION) -%}
    {%- set TORSION = torsion -%}
{% endif -%}
{%- if abs(pressure) > abs(PRESSURE) -%}
    {%- set PRESSURE = pressure -%}
{% endif -%}
{%- if abs(bending) > abs(BENDING) -%}
    {%- set BENDING = bending -%}
{% endif -%}
{%- if abs(code) > abs(CODE) -%}
    {%- set CODE = code -%}
{% endif %}
{%- if abs(allow) > abs(ALLOW) -%}
    {%- set ALLOW = allow -%}
{% endif %}
{%- if abs(sifi) > abs(SIFi) -%}
    {%- set SIFi = sifi -%}
{% endif %}
{%- if abs(sifo) > abs(SIFo) -%}
    {%- set SIFo = sifo -%}
{% endif %}
{%- if abs(ratio) > abs(RATIO) -%}
    {%- set RATIO = ratio -%}
{% endif %}
{% if loop.first -%}
{{ "%-10s" | format(point.name) }}{{ "%10s" | format(loadcase.name + " (" + loadcase.stype + ") ") }}{{ "% 10.1f" | format(hoop) }}{{ "% 10.1f" | format(axial) }}{{ "% 10.1f" | format(torsion) }}{{ "% 10.1f" | format(pressure) }}{{ "% 10.1f" | format(bending) }}{{ "% 10.1f" | format(code) }}{{ "% 10.1f" | format(allow) }}{{ "% 10.2f" | format(sifi) }}{{ "% 10.2f" | format(sifo) }}{{ "% 10.2f" | format(ratio) }}
{%- elif loop.last -%}
{{ "%-10s" | format(point.name) }}{{ "%10s" | format(loadcase.name + " (" + loadcase.stype + ") ") }}{{ "% 10.1f" | format(hoop) }}{{ "% 10.1f" | format(axial) }}{{ "% 10.1f" | format(torsion) }}{{ "% 10.1f" | format(pressure) }}{{ "% 10.1f" | format(bending) }}{{ "% 10.1f" | format(code) }}{{ "% 10.1f" | format(allow) }}{{ "% 10.2f" | format(sifi) }}{{ "% 10.2f" | format(sifo) }}{{ "% 10.2f" | format(ratio) }}
{{ "%-10s" | format(" ") }}{{ "%10s" | format("MAX ") }}{{ "% 10.1f" | format(HOOP) }}{{ "% 10.1f" | format(AXIAL) }}{{ "% 10.1f" | format(TORSION) }}{{ "% 10.1f" | format(PRESSURE) }}{{ "% 10.1f" | format(BENDING) }}{{ "% 10.1f" | format(CODE) }}{{ "% 10.1f" | format(ALLOW) }}{{ "% 10.2f" | format(SIFi) }}{{ "% 10.2f" | format(SIFo) }}{{ "% 10.2f" | format(RATIO) }}
{%- else -%}
{{ "%-10s" | format(point.name) }}{{ "%10s" | format(loadcase.name + " (" + loadcase.stype + ") ") }}{{ "% 10.1f" | format(hoop) }}{{ "% 10.1f" | format(axial) }}{{ "% 10.1f" | format(torsion) }}{{ "% 10.1f" | format(pressure) }}{{ "% 10.1f" | format(bending) }}{{ "% 10.1f" | format(code) }}{{ "% 10.1f" | format(allow) }}{{ "% 10.2f" | format(sifi) }}{{ "% 10.2f" | format(sifo) }}{{ "% 10.2f" | format(ratio) }}
{%- endif -%}
{% endfor %}
{% endfor -%}
